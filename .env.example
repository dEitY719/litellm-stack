# ═══════════════════════════════════════════════════
# GPU Optimization (Ollama)
# 참고: docker-compose.yml에 환경변수로 설정됨
# ═══════════════════════════════════════════════════

# [선택사항] GPU 오버헤드 오버라이드
# 기본값: docker-compose.yml에서 1GB (1073741824 bytes)
# 용도: GPU 메모리 부족 시 증가, 여유로울 때 감소
# 예시:
# OLLAMA_GPU_OVERHEAD=2147483648  # 2GB (큰 모델/다중 모델)
# OLLAMA_GPU_OVERHEAD=536870912   # 512MB (작은 모델)

# [선택사항] GPU 레이어 수 명시
# 기본값: auto (Ollama가 자동 감지)
# 용도: GPU 오프로드 문제 발생 시 수동 지정
# 예시 (tinyllama: 25 layers, gpt-oss:20b: 40 layers):
# OLLAMA_NUM_GPU=25

# [선택사항] 병렬 처리 수 오버라이드
# 기본값: docker-compose.yml에서 2
# 용도: 동시 요청 처리량 조정
# OLLAMA_NUM_PARALLEL=4  # 멀티유저 환경

# [선택사항] 최대 로드 모델 수 오버라이드
# 기본값: docker-compose.yml에서 2
# 용도: VRAM 사용량 조정
# OLLAMA_MAX_LOADED_MODELS=3  # 16GB+ VRAM

# [선택사항] Flash Attention 비활성화
# 기본값: docker-compose.yml에서 1 (활성화)
# 용도: 호환성 문제 발생 시에만 비활성화
# OLLAMA_FLASH_ATTENTION=0


# ═══════════════════════════════════════════════════
# GPU 사양별 권장 설정
# ═══════════════════════════════════════════════════

# 저사양 GPU (8GB VRAM 이하):
# - OLLAMA_GPU_OVERHEAD=536870912 (512MB)
# - OLLAMA_MAX_LOADED_MODELS=1
# - OLLAMA_NUM_PARALLEL=1
# - 모델: tinyllama만 사용 권장

# 중사양 GPU (8-12GB VRAM):
# - OLLAMA_GPU_OVERHEAD=1073741824 (1GB) ← 기본값
# - OLLAMA_MAX_LOADED_MODELS=2 ← 기본값
# - OLLAMA_NUM_PARALLEL=2 ← 기본값
# - 모델: tinyllama + 소형 모델 (7B 이하)

# 고사양 GPU (16GB+ VRAM):
# - OLLAMA_GPU_OVERHEAD=2147483648 (2GB)
# - OLLAMA_MAX_LOADED_MODELS=3
# - OLLAMA_NUM_PARALLEL=4
# - 모델: gpt-oss:20b 등 대형 모델 사용 가능


